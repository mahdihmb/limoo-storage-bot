<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ir.mahdihmb.limoo_storage_bot.entity.User" table="users">

        <id name="id" type="string">
            <generator class="assigned"/>
        </id>

        <map name="userMessagesAssignments" cascade="all-delete-orphan" inverse="true">
            <key column="userId"/>
            <map-key column="name" type="string"/>
            <one-to-many class="ir.mahdihmb.limoo_storage_bot.entity.UserMessage"/>
        </map>

    </class>
</hibernate-mapping>
