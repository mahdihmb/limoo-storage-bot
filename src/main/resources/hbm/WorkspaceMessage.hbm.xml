<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ir.mahdihmb.limoo_storage_bot.entity.WorkspaceMessage" table="workspace_messages">

        <id name="id" type="long">
            <generator class="increment"/>
        </id>

        <property name="name" type="string" not-null="true"
                  unique-key="name_workspace_unique_key"/>

        <many-to-one name="workspace" class="ir.mahdihmb.limoo_storage_bot.entity.Workspace"
                     column="workspaceId" not-null="true"
                     unique-key="name_workspace_unique_key"/>
        <many-to-one name="message" class="ir.limoo.driver.entity.Message"
                     column="messageId" not-null="true"
                     cascade="save-update"/>

    </class>
</hibernate-mapping>
